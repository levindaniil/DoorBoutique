<Page x:Class="DoorBoutique.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DoorBoutique"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="800"
      Title="LogIn">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" Margin="10 10 10 10">
            <TextBlock Margin="10 0 10 6" Width="40" FontSize="16" HorizontalAlignment="Left">Login</TextBlock>
            <TextBox x:Name="loginTextBox" Height="20" Margin="10 0 10 10"></TextBox>
            <TextBlock Margin="10 0 10 6" Width="70" FontSize="16" HorizontalAlignment="Left">Password</TextBlock>
            <PasswordBox x:Name="passwordBox" Height="20" Margin="10 0 10 10" ></PasswordBox>
            <Button x:Name="loginButton" Margin="10 0 10 10" HorizontalAlignment="Left" Width="40" Height="20" Click="loginButton_Click">OK</Button>
            <Button x:Name="guestButton" Margin=" 0 -40 10 0 " HorizontalAlignment="Right" Height="20" Width="60" Click="guestButton_Click" >Guest</Button>
        </StackPanel>
    </Grid>
</Page>
